<div class= "col-md-12">

  <h2 class= "text-center">我参与过讨论的电影</h2>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>影片名称：</th>
        <th>讨论内容</th>
        <th>评价总数</th>
        <th>更新时间</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td>#</td>
      <td><%= link_to(movie.title, movie_path(movie))%></td>
      <td><%= movie.description %></td>
      <td><%= movie.reviews.count %></td>
      <td><%= movie.updated_at %></td>
  </tr>
  <% end %>
</tbody>

</table>
</div>
