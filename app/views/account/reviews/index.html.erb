<div class= "col-md-12">
  <h2 class="text-center">发表过的评论</h2>

  <table class="table">
    <thead>
      <tr>
        <th>评论内容：</th>
        <th>影片名称：</th>
        <th>更新时间</th>
        <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
    <tr>
      <td><%= review.content %></td>
      <td><%= review.movie.title %></td>
      <td><%= review.updated_at %></td>
      <td><%= link_to("编辑",edit_movie_review_path(review.movie, review), class: "btn btn-xs btn-default")%></td>
      <td><%= link_to("删除",movie_review_path(review.movie, review), method: :delete, data: {confirm:"确定删除吗？"},class: "btn btn-xs btn-default") %></td>
  </tr>
    <% end %>
</tbody>
</table>
</div>
