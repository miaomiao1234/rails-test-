<%=form_for @review do |f| %>

<div class= "form-review">
  <% if @review.errors.any? %>
<ul>
  <% @review.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
  <div class= from-movie string optional>
    <%= f.label "评论内容：" , :class =>"string optional control-label" %>
    <%= f.text_field :content, :class =>"string optional form-control" %>
</div>




<br>
<%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submitting..."}%>
<% end %>
