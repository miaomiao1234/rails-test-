<%=form_for @movie do |f| %>

<div class= "form-movie">
  <% if @movie.errors.any? %>
<ul>
  <% @movie.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
  <div class= "from-movie string optional">
    <%= f.label "影片名称：" , :class =>"string optional control-label" %>
    <%= f.text_field :title, :class =>"string optional form-control" %>
</div>

  <div class= "form-movie string optional">
    <%= f.label "影片描述：", :class=> "string optional control-label" %>
    <%= f.text_area :description, :class =>"string optional form-control" %>
</div>

</div>
<br>
<%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submitting..."}%>
<% end %>
