<div class= "col-md-4 col-md-offset-4">
  <h2>编辑电影版</h2>

  <hr>
  <%= form_for @movie do |f| %>

  <% if @movie.errors.any? %>
  <ul>
    <% @movie.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
  <% end %>

  影片名称：
  <%= f.text_field :title %>
  <br>

  影片描述：
  <br>
  <%= f.text_area :description %>
  <br>

  <%= f.submit "更新", :disable_with => 'Submiting...' %>
  <% end %>
</div>
